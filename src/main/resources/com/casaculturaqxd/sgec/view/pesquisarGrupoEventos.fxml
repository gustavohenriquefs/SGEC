                                       <children>
                                          <Label text="Data de início">
                                             <font>
                                                <Font size="14.0" />
                                             </font>
                                          </Label>
                                          <DatePicker fx:id="dataInicio" />
                                       </children>
                                    </VBox>
                                    <VBox>
                                       <children>
                                          <Label text="Data de fim">
                                             <font>
                                                <Font size="14.0" />
                                             </font>
                                          </Label>
                                          <DatePicker fx:id="dataFim" />
                                       </children>
                                    </VBox>
                                    <VBox />
                                 </children>
                                 <padding>
                                    <Insets left="10.0" right="10.0" />
                                 </padding>
                              </HBox>
                           </children>
                           <padding>
                              <Insets top="10.0" />
                           </padding>
                        </VBox>
                        <VBox alignment="TOP_CENTER" spacing="10.0" VBox.vgrow="ALWAYS">
                           <children>
                              <Label text="Exibir resultados para">
                                 <font>
                                    <Font name="System Bold Italic" size="20.0" />
                                 </font>
                                 <VBox.margin>
                                    <Insets top="20.0" />
                                 </VBox.margin>
                              </Label>
                              <HBox alignment="TOP_CENTER" prefHeight="66.0" prefWidth="1440.0" spacing="100.0">
                                 <children>
                                    <Label fx:id="resultadoMeta" styleClass="labels" text="Label" visible="false">
                                       <font>
                                          <Font size="16.0" />
                                       </font>
                                    </Label>
                                    <Label fx:id="classificacaoResultado" styleClass="labels" text="Label" visible="false">
                                       <font>
                                          <Font size="16.0" />
                                       </font>
                                    </Label>
                                    <Label fx:id="dataInicioResultado" styleClass="labels" text="Label" visible="false">
                                       <font>
                                          <Font size="16.0" />
                                       </font>
                                    </Label>
                                    <Label fx:id="dataFinalResultado" styleClass="labels" text="Label" visible="false">
                                       <font>
                                          <Font size="16.0" />
                                       </font>
                                    </Label>
                                    <Label fx:id="localidadeResultado" styleClass="labels" text="Label" visible="false">
                                       <font>
                                          <Font size="16.0" />
                                       </font>
                                    </Label>
                                    <CheckBox fx:id="acessivelLibrasResultado" disable="true" mnemonicParsing="false" text="CheckBox" visible="false">
                                       <font>
                                          <Font size="14.0" />
                                       </font>
                                    </CheckBox>
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                        <VBox VBox.vgrow="ALWAYS">
                           <children>
                              <AnchorPane prefHeight="300.0" VBox.vgrow="ALWAYS">
                                 <children>
                                    <ScrollPane fx:id="campoResultados" hbarPolicy="ALWAYS" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" vbarPolicy="ALWAYS" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                       <content>
                                          <FlowPane fx:id="secaoResultados" />
                                       </content>
                                    </ScrollPane>
                                 </children>
                              </AnchorPane>
                           </children>
                        </VBox>
                     </children>
                  </VBox>
               </children>
            </AnchorPane>
         </children>
      </VBox>
   </children>
