<VBox id="pagePesquisarEvento" fx:id="root" stylesheets="@../css/page/pesquisarEventoStyle.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.casaculturaqxd.sgec.controller.PesquisarEventoController">
   <children>
      <AnchorPane id="container" style="-fx-background-color: #E9E3CA;" VBox.vgrow="ALWAYS">
      <children>
            <VBox layoutX="20.0" layoutY="67.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
               <children>
                  <VBox VBox.vgrow="ALWAYS">
                     <children>
                     <Label id="pesquisar" fx:id="pesquisar" text="Pesquisar Evento">
                        <font>
                           <Font name="System Bold" size="20.0" />
                        </font>
                     </Label>
                     <HBox>
                        <children>
                           <TextField fx:id="textFieldPesquisa" HBox.hgrow="ALWAYS">
                              <HBox.margin>
                                 <Insets top="10.0" />
                              </HBox.margin>
                           </TextField>
                           <Button id="botao" fx:id="botao" mnemonicParsing="false" onAction="#pesquisarEvento" text="Pesquisar" textFill="WHITE">
                              <HBox.margin>
                                 <Insets top="10.0" />
                              </HBox.margin>
                           </Button>
                        </children>
                     </HBox>
                     </children>
                  </VBox>
                  <VBox VBox.vgrow="ALWAYS">
                     <children>
                        <VBox>
                           <children>
                              <Label id="filtro" fx:id="filtro" text="Filtros">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Label>
                              <HBox spacing="10.0">
                                 <children>
                                    <MenuButton fx:id="opcoesMetas" mnemonicParsing="false" text="Metas">
                                       <items>
                                          <CheckMenuItem mnemonicParsing="false" text="Fruição" />
                                          <CheckMenuItem mnemonicParsing="false" text="Fortalecimento de Patrimônio Cultural" />
                                          <CheckMenuItem mnemonicParsing="false" text="Formação em Arte e Cultura" />
                                          <CheckMenuItem mnemonicParsing="false" text="Convocatória" />
                                       </items>
                                    </MenuButton>
                                    <DatePicker fx:id="dataInicio">
                                       <HBox.margin>
                                          <Insets left="5.0" />
                                       </HBox.margin>
                                    </DatePicker>
                                    <DatePicker fx:id="dataFim" prefWidth="130.0">
                                       <HBox.margin>
                                          <Insets left="5.0" />
                                       </HBox.margin>
                                    </DatePicker>
                                    <TextField fx:id="nomeLocalizacao">
                                       <HBox.margin>
                                          <Insets left="5.0" />
                                       </HBox.margin>
                                    </TextField>
                                    <CheckBox fx:id="acessivelLibras" mnemonicParsing="false" text="Acessível em libras" />
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" VBox.vgrow="ALWAYS">
                     <children>
                        <Label fx:id="exibir" pickOnBounds="false" text="Exibir resultados para" visible="false">
                           <font>
                              <Font name="System Bold" size="20.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <AnchorPane prefHeight="300.0" VBox.vgrow="ALWAYS">
                           <children>
                              <ScrollPane fx:id="scrollResultados" fitToHeight="true" fitToWidth="true" layoutX="10.0" layoutY="35.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" vbarPolicy="ALWAYS" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                 <content>
                                    <FlowPane fx:id="campoResultados" alignment="CENTER" columnHalignment="CENTER" hgap="20.0" vgap="20.0">
                                       <padding>
                                          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                       </padding>
                                    </FlowPane>
                                 </content>
                              </ScrollPane>
                           </children>
                        </AnchorPane>
                     </children>
                  </VBox>
               </children>
            </VBox>
      </children>
   </AnchorPane>
   </children>
   
</VBox>
